{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",

    "lib": [ "ESNext", "DOM" ],

    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "preserveConstEnums": true,
    "resolveJsonModule": true,

    "jsx": "preserve",

    "typeRoots": [ "node_modules/@types", "src/typings" ],

    "rootDir": "src",
    "outDir": "dist",
    "declaration": true
  },
  "exclude": [ "dist" ]
}